#!/bin/sh
#
# Two parameters are optional:
# - the host server of the database
# - the port of the database
#

if [ "$1" = "-h" -o "$1" = "--help" ];
then
        echo "Usage: $0 [<Database Server Hostname> [<Database Server Port>]]"
        echo ""
        exit -1
fi

##
# Database Server Hostname
DB_HOST="localhost"
if [ "$1" != "" ];
then
        DB_HOST="$1"
fi

# Database Server Port
DB_PORT="3306"
if [ "$2" != "" ];
then
        DB_PORT="$2"
fi

# Database User
DB_USER="geo"

# Database Password
DB_PASSWD="geo"

# Database Name
DB_NAME="geo_trep"

##
# Check file existence
checkSQLFile() {
	if [ ! -r ${SQL_FILE} ]; then
		echo
		echo "The ${SQL_FILE} SQL file can not be found"
		echo
		exit -1;
	fi
}

# Create the tables thanks to the given SQL script
createTables() {
	checkSQLFile
	echo "The OpenTrep tables will be created thanks to the ${SQL_FILE} script:"
	mysql -u ${DB_USER} --password=${DB_PASSWD} -P ${DB_PORT} -h ${DB_HOST} ${DB_NAME} < ${SQL_FILE}
	echo "The OpenTrep tables have been created."
}

# Create the indexes thanks to the given SQL script
createIndexes() {
	checkSQLFile
	echo "The OpenTrep indexes will be created thanks to the ${SQL_FILE} script:"
	mysql -u ${DB_USER} --password=${DB_PASSWD} -P ${DB_PORT} -h ${DB_HOST} ${DB_NAME} < ${SQL_FILE}
	echo "The OpenTrep indexes have been created."
}

#
loadTableIntoDB() {
    CSV_FILE="@OPENTREP_DB_DATA_DIR@/trep_${DB_TABLE}.csv"
    SQL_STATEMENT="load data local infile '${CSV_FILE}' ignore"
    SQL_STATEMENT="${SQL_STATEMENT} into table ${DB_TABLE} character set utf8"
	SQL_STATEMENT="${SQL_STATEMENT} fields terminated by '^' enclosed by ''"
    SQL_STATEMENT="${SQL_STATEMENT} escaped by '\\\\' ignore 1 lines"
    echo "Data will be loaded into the '${DB_TABLE}' table for '${DB_USER}@${DB_NAME}'..."
    mysql -u ${DB_USER} --password=${DB_PASSWD} -P ${DB_PORT} -h ${DB_HOST} ${DB_NAME} -e "${SQL_STATEMENT}"
    echo "... Done: data has been loaded into the '${DB_TABLE}' table for '${DB_USER}@${DB_NAME}'."
}

#
countRows() {
	echo "Counting the rows from the ${TABLE} table:"
	mysql -u ${DB_USER} --password=${DB_PASSWD} -P ${DB_PORT} -h ${DB_HOST} ${DB_NAME} -e "select count(*) from ${TABLE};"
}

# Table: Airport and City
SQL_FILE="@OPENTREP_DB_DATA_DIR@/create_trep_tables.sql"
createTables

# Load place_details data into the table
DB_TABLE="place_details"
loadTableIntoDB

# Load place_names data into the table
DB_TABLE="place_names"
loadTableIntoDB

# Load airport_pageranked data into the table
DB_TABLE="airport_pageranked"
loadTableIntoDB

# Indexes
SQL_FILE="@OPENTREP_DB_DATA_DIR@/create_trep_indexes.sql"
createIndexes

# Count the rows
TABLES="place_details place_names"
for TABLE in ${TABLES}
do
	countRows
done
